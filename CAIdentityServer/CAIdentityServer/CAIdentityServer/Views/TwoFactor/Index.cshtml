@{
    ViewBag.Title = "OTP";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@using (Html.BeginForm())
{
    <div class="flex-box">
        <div class="inner">
            <h3 class="form-heading"><strong>Online Transaction Password (OTP)</strong></h3>
            <p class="form-heading">Enter the code sent to your mail/mobile device</p>
            <div class="frm-block">
                <form method="post">
                    @if (ViewData["message"] != null)
                    {
                        <div class="alert alert-danger">@ViewData["message"]</div>
                    }
                    <div class="form-group mb-1">
                        <input type="text" id="code" required="true" name="code" class="form-control">
                    </div>
                    <br/>
                    <button class="btn btn-success btn-block">Submit</button>
                </form>
            </div>
        </div>
    </div>
}