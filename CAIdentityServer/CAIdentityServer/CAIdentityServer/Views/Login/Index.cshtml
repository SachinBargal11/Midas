@model CAIdentityServer.Models.LoginCredential

@{
    ViewBag.Title = "Login Page";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@using (Html.BeginForm())
{
    <div class="flex-box">
        <div class="inner">
            <h3 class="form-heading"><strong>MIDAS </strong>PORTAL</h3>
            <div class="alert-danger">
                @Html.ValidationSummary()
            </div>
            <div class="frm-block">
                <form>
                    <div class="form-group mb-1">
                        @Html.TextBoxFor(model => model.Username, new { id = "txtUserName", type = "email", Value = "bajpai.adarsh@gmail.com", required = "required", @class = "form-control" })
                    </div>
                    <div class="form-group mb-3">
                        @Html.TextBoxFor(model => model.Password, new { id = "txtPassword", type = "password", Value = "Satish@78", required = "required", @class = "form-control" })
                    </div>
                    <div class="form-check mb-3 keep">
                        <label class="form-check-label">
                            @Html.CheckBoxFor(model => model.RememberMe, new { id = "chkRememberMe",  @class="form-check-input"})
